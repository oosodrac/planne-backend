// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Balde {
  id Int @default(autoincrement()) @id
  nome String
  capacidade Int
  frutas Fruta[]
}

model Fruta {
  id Int @default(autoincrement()) @id
  nome String
  preco Decimal
  expiracao Int
  balde Balde @relation(fields: [baldeId], references: [id] )
  baldeId Int
}
