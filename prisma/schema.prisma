// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Balde {
  id Int @default(autoincrement()) @id
  nome String
  capacidade Int
  baldeFrutas BaldeFruta[]
}

model Fruta {
  id Int @default(autoincrement()) @id
  nome String
  preco Decimal
  expiracao Int
  baldeFrutas BaldeFruta[]
}

model BaldeFruta {
  id Int @default(autoincrement()) @id
  quantidadeFruta Int
  precoUnitario Decimal
  precoTotal Decimal
  baldeId Int
  balde Balde @relation(fields: [baldeId], references: [id])
  frutaId Int
  fruta Fruta @relation(fields: [frutaId], references: [id])
}
